@model Models.Framework.Product
@{ ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml"; }
@{ var categorylist = (IEnumerable<SelectListItem>)ViewBag.Category; }

<!-- Start home -->
<section class="bg-half page-next-level">
    <div class="bg-overlay" style="        background: url('');
        background-image: url('../../assets2/images/job-detail.png');
"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center text-white">    
                    <h4 class="text-uppercase title mb-4">Create Product</h4>
                    <ul class="page-next d-inline-block mb-0">
                        <li><a href="/Home/Index" class="text-uppercase font-weight-bold">Home</a></li>
                        @*<li><a href="/Home/ListProduct" class="text-uppercase font-weight-bold">Jobs</a></li>*@
                        <li>
                            <span class="text-uppercase text-white font-weight-bold">Create Product</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- POST A JOB START -->
<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <div class="rounded shadow bg-white p-4">
                    <div class="custom-form">
                        <div id="message3"></div>
                        @*<form method="post" action="php/contact.php" name="contact-form" id="contact-form3">*@
                        @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "Multipart/form-data", name = "contact-form", id = "contact-form3" }))
                        {
                            <div class="text-success mb-0 rounded">
                                <h4 class="text-center ">POST A NEW JOB</h4>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group app-label mt-2">
                                    <label class="text-muted">Job Title</label>
                                    @*<input id="company-name" type="text" class="form-control resume"
                                        placeholder="">*@
                                    @Html.TextBoxFor(o => o.Name, new { id = "company-name", type = "text", @class = "form-control resume", placeholder = "" })
                                </div>
                            </div>


                                            <div class="col-md-12">
                                                <div class="form-group app-label mt-2">
                                                    <label class="text-muted">Price</label>

                                                    @Html.TextBoxFor(o => o.Price, new { @id = "maximum-salary", @type = "text", @class = "form-control resume", @placeholder = "$20000" })
                                                </div>
                                            </div>

                                                            <div class="col-md-6">
                                                                <div class="form-group app-label mt-2">
                                                                    <label class="text-muted">Job Category</label>
                                                                    <div class="form-button">

                                                                        @Html.DropDownListFor(o => o.ID_Category, categorylist, new { @class = "nice-select rounded" })
                                                                    </div>
                                                                </div>
                                                            </div>





                                                                            <div class="col-md-6">
                                                                                <div class="form-group app-label mt-2">
                                                                                    <label class="text-muted">Education Level</label>
                                                                                    <div class="form-button">
                                                                                        
                                                                                        @Html.DropDownListFor(o => o.Education, new SelectListItem[]
                                                                                                                                              {
                                                    new SelectListItem() {Text = "None", Value = "None", Selected = true},
                                                    new SelectListItem(){Text = "Intern", Value = "Intern"},
                                                    new SelectListItem() {Text = "Fresher", Value = "Fresher"},
                                                    new SelectListItem() {Text = "Junior", Value = "Junior"},
                                                    new SelectListItem() {Text = "Senior", Value = "Senior"}
}, new { @class = "nice-select rounded" })
                                                                                    </div>
                                                                                </div>


                                                                                @*<div class="col-md-6">*@
                                                                                <div class="form-group app-label mt-2">
                                                                                    <label class="text-muted">Year of Experience</label>
                                                                                    <div class="form-button">
                                                                                        
                                                                                        @Html.DropDownListFor(o => o.Experience, new SelectListItem[]
                                                                                    {
                                                                                           new SelectListItem() {Text = "Under 1 year", Value ="Under 1 year", Selected = true},
                                                                                           new SelectListItem() {Text = "1 to 2 year", Value ="1 to 2 year"},
                                                                                           new SelectListItem() {Text = "2 to 3 year", Value ="2 to 3 year"},
                                                                                           new SelectListItem() {Text = "Over 3 year", Value ="Over 3 year"},
                                                                                    }, new { @class = "nice-select rounded" })
                                                                                    </div>
                                                                                </div>
                                                                            </div>


                                                                                            <div class="row">
                                                                                                <div class="col-md-12">
                                                                                                    <div class="form-group app-label mt-2">
                                                                                                        
                                                                                                    </div>
                                                                                                </div>
                                                                                            </div>

                                                                                                            <div class="row">
                                                                                                                <div class="col-md-6">
                                                                                                                    <div class="form-group app-label mt-2">
                                                                                                                       
                                                                                                                    </div>
                                                                                                                </div>

                                                                                                                <div class="col-md-6">
                                                                                                                    <div class="form-group app-label mt-2">
                                                                                                                        @*<label class="text-muted">Phone Number</label>*@
                                                                                                                        @*<input id="number" type="text" class="form-control resume" placeholder="">*@
                                                                                                                        @*@Html.TextBoxFor(o => o.Phone, new { id = "number", type = "text", @class = "form-control resume" })*@
                                                                                                                    </div>
                                                                                                                </div>
                                                                                                            </div>


                                                                                                                          
                                                                                                                                <div class="col-md-12">
                                                                                                                                    <div class="form-group app-label mt-2">
                                                                                                                                        <label class="text-muted">Job Description</label>
                                                                                                                                        @*<textarea id="description" rows="6" class="form-control resume"
                                                                                                                                            placeholder=""></textarea>*@
                                                                                                                                        @Html.TextAreaFor(o => o.Description, new
                                                                                                                                        {
                                                                                                                                            id = "description",
                                                                                                                                            rows = "6",
                                                                                                                                            @class = "form-control resume",
                                                                                                                                            placeholder = ""
                                                                                                                                        })
                                                                                                                                    </div>
                                                                                                                                </div>
                                                                                                                       

                                                                                                                                           
                                                                                                                                                <div class="col-md-12">
                                                                                                                                                    <ul class="list-inline mb-0">
                                                                                                                                                        <li class="list-inline-item">
                                                                                                                                                            <div class="input-group mt-2 mb-2">
                                                                                                                                                                <div class="custom-file">
                                                                                                                                                                    <input type="file" class="custom-file-input"
                                                                                                                                                                           id="inputGroupFile01"
                                                                                                                                                                           aria-describedby="inputGroupFileAddon01"
                                                                                                                                                                           name="image">
                                                                                                                                                                    <label class="custom-file-label rounded">
                                                                                                                                                                        <i class="mdi mdi-cloud-upload mr-1"></i> Job image
                                                                                                                                                                    </label>
                                                                                                                                                                </div>
                                                                                                                                                            </div>
                                                                                                                                                        </li>

                                                                                                                                                        <li class="list-inline-item">
                                                                                                                                                           
                                                                                                                                                        </li>
                                                                                                                                                    </ul>
                                                                                                                                                </div>
                                                                                                                                         

                                                                                                                                                          
                                                                                                                                                                <div class="col-lg-12 mt-2">
                                                                                                                                                                    <button type="submit" class="btn btn-primary">Post Job</button>
                                                                                                                                                                </div>
                                                                                                                                                           }
                        @*</form>*@
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- POST A JOB END -->
