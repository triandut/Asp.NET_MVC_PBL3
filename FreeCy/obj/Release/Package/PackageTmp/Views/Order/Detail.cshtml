@model Models.Framework.Order
@using Models.Framework
@{ ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout2.cshtml"; }


@{ List<UploadFile> filelist = (List<UploadFile>)ViewBag.Files; }

<section class="bg-half page-next-level">

    <div class="bg-overlay" style="background: url('') center center;
        background-image: url('../../assets2/images/login-bg.png');
"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center text-white">
                    <h4 class="text-uppercase title mb-4">Job List view</h4>
                    <ul class="page-next d-inline-block mb-0">
                        <li>
                            <a href="/Home/Index" class="text-uppercase font-weight-bold">Home</a>
                        </li>

                        <li>
                            <span class="text-uppercase text-white font-weight-bold">Job Listing</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end home -->
<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="rounded shadow bg-white p-4">
                    <div class="custom-form">
                        <div id="message3"></div>
                        <div class="col-12 mt-3">
                            <div class="custom-form p-4 border rounded">

                                <form class="text-success mb-0 rounded">
                                    <h4 class="text-center">DETAIL PRODUCT ORDERED</h4>
                                    <form method="post" action="php/contact.php" name="contact-form" id="contact-form3">


                                        <div class="col-md-12">
                                            <div class="form-group app-label mt-2">
                                                @*<h4 class="text-muted">@Model.Product.Name</h4>*@
                                                @*<label class="text-muted"> @Model.Product.Name  </label>*@

                                            </div>
                                        </div>
                                        <div class="job-detail-content">
                                            <img src="~/assets2/images/featured-job/@Model.Product.Image" alt=""
                                                 class="img-fluid float-left mr-md-3 mr-2 mx-auto d-block">
                                            <div class="job-detail-com-desc overflow-hidden d-block">
                                                <h4 class="text-muted">@Model.Product.Name</h4>
                                                <p class="text-muted mb-0">
                                                    <i class="mdi mdi-link-variant mr-2">@Model.Product.User.UserName</i>
                                                </p>

                                            </div>


                                    </form>
                                </form>


                            </div>
                        </div>
                    </div>
                    <div class="col-12 mt-3">
                        <div class="custom-form p-4 border rounded">
                            @*<img src=""
                        class="img-fluid avatar avatar-medium d-block mx-auto rounded-pill" alt="">*@
                            <form class="text-success mb-0 rounded">
                                <h4 class="text-center">ORDER INFORMATION</h4>
                            </form>
                            <form>
                                <h5 class="text-muted">+ Quantity : @Model.Quantity</h5>
                                <h5 class="text-muted">+ Total Price : @Model.Price</h5>
                                <h5 class="text-muted">+ Description : @Model.Description</h5>
                                <h5 class="text-muted">+ Creation Start Time : @Model.CreatedAt</h5>
                                <h5 class="text-muted">+ Files Finish :</h5>


                                @foreach (var item in filelist)
                                {
                    <div>File Name: @item.Filename </div>
                                    <text>
                                        <a href="~/File/DownloadFile?id=@item.Id"> Download</a>
                                    </text>}
                        </div>




                        </form>
                    </div>
                </div>

            </div>
            <form class="text-success mb-0 rounded">
                <h4 class="text-center"></h4>
                <form method="post" action="php/contact.php" name="contact-form" id="contact-form3">
                    <p>
                        @Html.ActionLink("Xác nhận hoàn thành", "ConfirmCompleted", new { confirm = true, order_id = Model.ID_Order }, new { onclick = "return confirm('Bạn có chắc chắn muốn thực hiện?')", type = "submit", @class = "btn btn-primary" })
                       
                        @Html.ActionLink("Trở lại", "SendOrders", "Order", new { type = "submit", @class = "btn btn-primary" })
                        
                    </p>
                </form>
               
                   
            
              
            </form>
            @*@Html.ActionLink("Thanh toán", "Payment", "Cart", new { type = "submit", @class = "btn btn-primary" })*@
            <div >
            <a href="#" class="btn btn-primary">Thanh toán</a>
        </div>
        </div>
    </div>
    </div>
</section>
